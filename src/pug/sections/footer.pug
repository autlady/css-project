            div(class="footer__map" data-modal-button="modal-map")
                <iframe src="https://yandex.ru/map-widget/v1/?um=constructor%3Ad631064279eacf4bd2bd77875672a0752001bb2ea179a6c5184667b7c175a4c5&amp;source=constructor"></iframe>
