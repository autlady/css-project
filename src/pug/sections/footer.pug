footer.footer
    .container
        .footer-top
            .logo
                a(href="index.html").logo-img
                   img(src="./img/logo-img.webp", alt="logo")
            nav.nav
                ul.nav-menu
                    li.nav-menu-item
                        a(href="index.html").nav-menu-link.active
                            svg.svg-home
                                use(href="./img/spriteSvg.svg#svg-home")
                            span Главная
                    li
                        a(href="#services").nav-menu-link
                            svg.svg-service
                                use(href="./img/spriteSvg.svg#svg-service")
                            span Услуги
                    li
                        a(href="#cases").nav-menu-link
                            svg.svg-case
                                use(href="./img/spriteSvg.svg#svg-case")
                            span Кейсы
                    li
                        a(href="#testimonials").nav-menu-link
                            svg.svg-user
                                use(href="./img/spriteSvg.svg#svg-user")
                            span Отзывы
